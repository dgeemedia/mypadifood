<!-- views/auth/signup-choice.ejs -->
<section class="signup-choice container">
  <div class="signup-card">
    <h1>Join MyPadiFood</h1>
    <p class="muted">
      Create an account to order delicious meals, register as a food vendor to
      reach customers, or sign up as a rider to deliver orders.
    </p>

    <div class="signup-actions">
      <a
        class="btn btn-primary btn-large"
        href="/client/register"
        aria-label="Sign up as customer"
      >
        Sign up as Customer
      </a>

      <a
        class="btn btn-outline btn-large vendor-cta"
        href="/vendor/register"
        aria-label="Register as food vendor"
      >
        Register as Food Vendor
      </a>

      <a
        class="btn btn-outline btn-large rider-cta"
        href="/rider/register"
        aria-label="Register as Rider"
      >
        Register as Rider
      </a>
    </div>

    <p class="muted small">Already registered? <a href="/login">Sign in</a></p>
  </div>
</section>
