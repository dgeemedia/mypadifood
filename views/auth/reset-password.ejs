<!-- views/auth/reset-password.ejs -->
<div class="account-page">
  <h1 class="account-title">Reset password</h1>

  <% if (error) { %><div class="form-errors"><%= error %></div><% } %>

  <% if (!token) { %>
    <p class="muted">Invalid or missing token.</p>
    <p><a href="/forgot-password">Request a new reset link</a></p>
  <% } else { %>
    <form method="post" action="/reset-password" class="account-form">
      <input type="hidden" name="token" value="<%= token %>" />
      <div class="form-row">
        <label for="pw">New password</label>
        <input id="pw" name="password" type="password" required />
      </div>
      <div class="form-row">
        <label for="pw2">Confirm password</label>
        <input id="pw2" name="passwordConfirm" type="password" required />
      </div>

      <div class="form-row">
        <button type="submit" class="btn btn-gold">Set new password</button>
        <a href="/login" class="btn btn-link">Back to sign in</a>
      </div>
    </form>
  <% } %>
</div>
