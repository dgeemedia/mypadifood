<!-- views/auth/forgot-password.ejs -->
<div class="account-page">
  <h1 class="account-title">Forgot your password?</h1>

  <% if (error) { %><div class="form-errors"><%= error %></div><% } %>
  <% if (info) { %><div class="flash-success"><%= info %></div><% } %>

  <form method="post" action="/forgot-password" class="account-form">
    <div class="form-row">
      <label for="fp-email">Email</label>
      <input id="fp-email" name="email" type="email" required placeholder="you@example.com" />
    </div>

    <div class="form-row">
      <button type="submit" class="btn btn-gold">Send reset link</button>
      <a href="/login" class="btn btn-link">Back to sign in</a>
    </div>
  </form>
</div>
