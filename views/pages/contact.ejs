<!--views/pages/contact.ejs-->
<section class="container page contact-page">
  <link rel="stylesheet" href="/css/contact.css" />
  <h1>Contact</h1>

  <p>
    Please fill the form below
  </p>

  <div class="contact-grid">
    <form id="contactForm" class="card form-card" enctype="multipart/form-data" method="post" action="/contact">
      <label class="field">
        <span>Name</span>
        <input name="name" type="text" required />
      </label>

      <label class="field">
        <span>Email</span>
        <input name="email" type="email" required />
      </label>

      <label class="field">
        <span>Phone (optional)</span>
        <input name="phone" type="tel" />
      </label>

      <label class="field">
        <span>Subject</span>
        <input name="subject" type="text" required placeholder="Short description" />
      </label>

      <label class="field">
        <span>Message</span>
        <textarea name="message" rows="6" required placeholder="How can we help?"></textarea>
      </label>

      <label class="field">
        <span>Attachment (optional, max 5MB)</span>
        <input name="attachment" type="file" accept=".pdf,.doc,.docx,.jpg,.png" />
      </label>

      <div class="form-actions">
        <button type="submit" class="btn btn-gold">Send message</button>
        <button type="reset" class="btn">Clear</button>
      </div>

      <div id="contactFormMessage" class="muted" aria-live="polite"></div>
    </form>

    <aside class="contact-info card">
      <h3>Other ways to reach us</h3>
      <p>Email: <a href="mailto:<%= process.env.CONTACT_EMAIL %>"><%= process.env.CONTACT_EMAIL || process.env.ADMIN_EMAIL || 'support@mypadifood.com' %></a></p>
      <p>Response time: Usually within 1â€“2 business days.</p>
      <p>If this is about a job application, include the application reference (e.g. MPF-123456-789) in your message so we can link conversations.</p>
    </aside>
  </div>

  <script src="/js/contact.js" defer></script>
</section>

