<!--views/partials/header.ejs-->
<header class="site-header">
  <div class="container header-inner">
    <div class="brand-wrap">
      <a class="logo-link" href="/" aria-label="MyPadiFood home">
        <img src="/images/logo.svg" alt="MyPadiFood" class="logo" height="44" />
        <span class="brand">MyPadiFood</span>
      </a>
    </div>

    <nav class="top-nav" aria-label="Primary navigation">
      <a class="nav-link" href="/">Home</a>
      <a class="nav-link" href="/about">About</a>
      <a class="nav-link" href="/careers">Careers</a>
      <a class="nav-link" href="/contact">Contact</a>

      <% if (!currentUser) { %>
        <a class="nav-cta" href="/login">Sign in</a>
        <a class="nav-ghost" href="/signup">Sign up</a>
      <% } else { %>
        <% if (currentUser.type === 'admin' || currentUser.type === 'super' || currentUser.type === 'agent') { %>
          <a class="nav-link" href="/admin/dashboard">Dashboard</a>
        <% } else { %>
          <a class="nav-link" href="/client/dashboard">Dashboard</a>
        <% } %>

        <form method="post" action="/logout" class="logout-form" style="display:inline">
          <input type="hidden" name="next" value="/" />
          <button type="submit" class="link-like" aria-label="Logout">Logout</button>
        </form>
      <% } %>
    </nav>

    <button
      class="hamburger"
      id="mobile-menu-toggle"
      aria-expanded="false"
      aria-controls="mobile-drawer"
      aria-label="Open menu"
    >
      <span class="hamburger-box"><span class="hamburger-inner"></span></span>
    </button>
  </div>
</header>
