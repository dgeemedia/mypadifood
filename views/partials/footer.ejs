<!--views/partials/footer.ejs-->
<%
  // optional: provide youtubeVideoId when rendering, or use env var
  const youtubeId = (typeof youtubeVideoId !== 'undefined' && youtubeVideoId) ? youtubeVideoId : (process.env.YOUTUBE_VIDEO_ID || null);
  const youtubeChannel = process.env.YOUTUBE_CHANNEL || 'https://www.youtube.com/@MyPadiFood';
%>

<footer class="site-footer">
  <div class="container footer-grid">
    <div class="footer-col">
      <a class="brand-footer" href="/">
        <img src="/images/logo.svg" alt="logo" height="36" />
        <span>MyPadiFood</span>
      </a>
      <p class="muted">
        Local food vendors & deliveries â€” connecting neighbours.
      </p>
    </div>

    <div class="footer-col">
      <h4>Pages</h4>
      <ul>
        <li><a href="/about">About Us</a></li>
        <li><a href="/contact">Contact Us</a></li>
        <li><a href="/careers">Careers</a></li>
        <li><a href="/support">Support</a></li>
      </ul>
    </div>

    <div class="footer-col">
      <h4>Policies</h4>
      <ul>
        <li><a href="/faq">FAQ</a></li>
        <li><a href="/terms">Terms</a></li>
        <li><a href="/privacy">Privacy</a></li>
      </ul>
    </div>

    <div class="footer-col">
      <h4>Follow</h4>
      <ul class="social-links">
        <li>
          <a href="https://www.facebook.com/profile.php?id=61583088390559" target="_blank"
            rel="noopener noreferrer" aria-label="Facebook">
            <i class="fa-brands fa-facebook-f" aria-hidden="true"></i>
            <span class="social-label">Facebook</span>
          </a>
        </li>

        <li>
          <a href="https://x.com/MyPadiFood" target="_blank"
            rel="noopener noreferrer" aria-label="X">
            <i class="fa-brands fa-x" aria-hidden="true"></i>
            <span class="social-label">X</span>
          </a>
        </li>

        <li>
          <a href="https://www.instagram.com/mypadifood/" target="_blank"
            rel="noopener noreferrer" aria-label="Instagram">
            <i class="fa-brands fa-instagram" aria-hidden="true"></i>
            <span class="social-label">Instagram</span>
          </a>
        </li>

        <li>
          <a
            href="https://www.linkedin.com/company/109748993/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
          >
            <i class="fa-brands fa-linkedin-in" aria-hidden="true"></i>
            <span class="social-label">LinkedIn</span>
          </a>
        </li>

        <li>
          <a href="https://www.youtube.com/@MyPadiFood" target="_blank"
            rel="noopener noreferrer" aria-label="YouTube">
            <i class="fa-brands fa-youtube" aria-hidden="true"></i>
            <span class="social-label">YouTube</span>
          </a>
        </li>

      </ul>

      <!-- YouTube embed / CTA -->
      <div class="footer-youtube">
        <% if (youtubeId) { %>
          <div class="youtube-embed" aria-hidden="false">
            <iframe
              src="https://www.youtube.com/embed/<%= youtubeId %>?rel=0&modestbranding=1"
              title="MyPadiFood video"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
          <p class="muted" style="margin-top:8px;">Watch more on <a href="<%= youtubeChannel %>" target="_blank" rel="noopener noreferrer">our YouTube channel</a>.</p>
        <% } else { %>
          <p class="muted">Watch our videos on <a href="<%= youtubeChannel %>" target="_blank" rel="noopener noreferrer">YouTube</a>.</p>
        <% } %>
      </div>
    </div>
  </div>

  <div
    class="container footer-bottom"
    style="
      margin-top: 12px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    "
  >
    <small
      >&copy;
      <%= new Date().getFullYear() %>
      MyPadiFood. All rights reserved.</small
    >
  </div>
</footer>
