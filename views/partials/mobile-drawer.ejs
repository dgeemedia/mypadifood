<!--views/partials/mobile-drawer.ejs-->
<div class="mobile-drawer" id="mobile-drawer" aria-hidden="<%= currentUser ? 'false' : 'true' %>" role="dialog" aria-label="Mobile menu">
  <div class="close-btn" style="display:flex; justify-content:flex-end;">
    <button id="mobile-drawer-close" aria-label="Close" class="btn">Close</button>
  </div>

  <nav>
    <a href="/">Home</a>

    <% if (!currentUser) { %>
      <a href="/client/login">Client Login</a>
      <a href="/client/register">Client Signup</a>
      <a href="/vendor/register">Vendor Register</a>
      <a href="/admin/login">Admin Login</a>
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
    <% } else { %>
      <% if (currentUser.type === 'client') { %>
        <a href="/client/dashboard">Dashboard</a>
        <a href="/client/logout">Logout</a>
      <% } else if (['admin','super','agent'].includes(currentUser.type)) { %>
        <a href="/admin/dashboard">Admin Dashboard</a>
        <a href="/admin/logout">Logout</a>
      <% } else { %>
        <a href="/client/logout">Logout</a>
      <% } %>
      <hr />
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
    <% } %>
  </nav>
</div>
