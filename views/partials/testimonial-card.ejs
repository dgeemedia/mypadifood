<!-- views/partials/testimonial-card.ejs -->
<article class="testimonial-card" role="article" aria-label="Customer testimonial">
  <div class="testimonial-top">
    <img
      class="testimonial-avatar"
      src="<%= testimonial.avatar || testimonial.photo_url || '/images/avatars/human-generic.jpg' %>"
      alt="<%= testimonial.name ? testimonial.name + ' avatar' : 'User avatar' %>"
      width="72" height="72"
      onerror="this.onerror=null;this.src='/images/avatars/human-generic.jpg';"
    />
  </div>

  <div class="testimonial-body">
    <div class="testimonial-head">
      <strong class="testimonial-name"><%= testimonial.name || 'Anonymous' %></strong>
      <% if (testimonial.city) { %>
        <div class="testimonial-meta"><%= testimonial.city %></div>
      <% } %>
    </div>

    <blockquote class="testimonial-quote">
      <%= testimonial.quote %>
    </blockquote>
  </div>
</article>

