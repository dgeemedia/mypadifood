<!-- views/admin/partials/withdrawal-modals.ejs -->
<!-- Approve modal -->
<div id="modal-approve" class="modal" aria-hidden="true" style="display: none">
  <div
    class="modal-inner"
    role="dialog"
    aria-modal="true"
    aria-labelledby="modal-approve-title"
  >
    <h3 id="modal-approve-title">Approve withdrawal</h3>
    <form id="form-approve" method="post" action="">
      <input type="hidden" name="id" value="" />
      <div class="form-row">
        <label>
          <input type="checkbox" name="markPaid" value="1" /> I already
          performed the external payout (mark as paid)
        </label>
      </div>
      <div class="form-row">
        <label
          >Provider (optional)
          <input
            type="text"
            name="provider"
            placeholder="bank|paystack|flutterwave|manual"
          />
        </label>
      </div>
      <div class="form-row">
        <label
          >Provider reference (optional)
          <input
            type="text"
            name="provider_reference"
            placeholder="provider payout reference"
          />
        </label>
      </div>
      <div class="form-row">
        <label
          >Admin note (internal)
          <textarea
            name="note"
            rows="2"
            placeholder="Optional note to record"
          ></textarea>
        </label>
      </div>

      <div class="modal-actions">
        <button type="submit" class="btn btn-primary">Approve</button>
        <button type="button" class="btn btn-secondary" id="approve-cancel">
          Cancel
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Decline modal -->
<div id="modal-decline" class="modal" aria-hidden="true" style="display: none">
  <div
    class="modal-inner"
    role="dialog"
    aria-modal="true"
    aria-labelledby="modal-decline-title"
  >
    <h3 id="modal-decline-title">Decline withdrawal</h3>
    <form id="form-decline" method="post" action="">
      <input type="hidden" name="id" value="" />
      <div class="form-row">
        <label
          >Reason / note to client
          <textarea
            name="note"
            rows="3"
            placeholder="Explain reason for decline (optional)"
          ></textarea>
        </label>
      </div>
      <div class="modal-actions">
        <button type="submit" class="btn btn-danger">Decline request</button>
        <button type="button" class="btn btn-secondary" id="decline-cancel">
          Cancel
        </button>
      </div>
    </form>
  </div>
</div>
