<!---- views/admin/partners-list.ejs ---->
<section class="container">

<h2>Partners</h2>

<form method="post" action="/admin/partners/add" enctype="multipart/form-data" style="margin-bottom:16px">
  <div class="form-row">
    <label>
      Name
      <input type="text" name="name" required />
    </label>
  </div>
  <div class="form-row">
    <label>
      Website
      <input type="url" name="website" />
    </label>
  </div>
  <div class="form-row">
    <label>
      Logo
      <input type="file" name="logo" accept="image/*" />
    </label>
  </div>
  <div style="margin-top:8px">
    <button class="btn btn-primary" type="submit">Add partner</button>
  </div>
</form>

<% if (!partners || !partners.length) { %>
  <p>No partners yet</p>
<% } else { %>
  <div class="partners-row">
    <% partners.forEach(function(p) { %>
      <div style="border:1px solid #eef2f7;padding:12px;border-radius:8px;background:#fff;min-width:200px;">
        <div style="height:56px;margin-bottom:6px;display:flex;align-items:center;justify-content:center;">
          <% if (p.logo_url) { %>
            <img src="<%= p.logo_url %>" alt="<%= p.name %>" style="max-height:56px;max-width:160px;object-fit:contain;" />
          <% } else { %>
            <div style="height:56px;width:160px;background:#f7fafc;display:flex;align-items:center;justify-content:center;color:#777;">No logo</div>
          <% } %>
        </div>
        <div style="font-weight:700;"><%= p.name %></div>
        <% if (p.website) { %>
          <div><a href="<%= p.website %>" target="_blank" rel="noopener noreferrer"><%= p.website %></a></div>
        <% } %>
        <form method="post" action="/admin/partners/delete" style="margin-top:8px">
          <input type="hidden" name="id" value="<%= p.id %>" />
          <button class="btn btn-danger" type="submit">Delete</button>
        </form>
      </div>
    <% }) %>
  </div>
<% } %>

</section>