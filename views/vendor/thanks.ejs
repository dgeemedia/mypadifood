<!-- views/vendor/thanks.ejs -->
<div class="account-page">
  <div
    class="account-form"
    style="text-align: left; box-shadow: none; border: 0; padding: 18px"
  >
    <h2 style="margin-top: 0">Thanks for signing up, <%= vendor.name %>!</h2>
    <p>
      Your vendor enrollment has been received and is currently
      <strong><%= vendor.status %></strong>.
    </p>
    <p>
      Our admin team will review your submission and perform a site visit where
      necessary. Once verified, your listing will appear on the homepage.
    </p>

    <dl style="margin-top: 12px">
      <dt style="font-weight: 700; margin-top: 8px">Vendor</dt>
      <dd><%= vendor.name %></dd>

      <dt style="font-weight: 700; margin-top: 8px">Address</dt>
      <dd><%= vendor.address %></dd>

      <dt style="font-weight: 700; margin-top: 8px">State / LGA</dt>
      <dd>
        <%= vendor.state %>
        /
        <%= vendor.lga %>
      </dd>

      <dt style="font-weight: 700; margin-top: 8px">Status</dt>
      <dd><%= vendor.status %></dd>
    </dl>

    <p style="margin-top: 12px">
      If you need immediate assistance, contact support at
      <a href="mailto:<%= process.env.ADMIN_EMAIL %>"
        ><%= process.env.ADMIN_EMAIL %></a
      >.
    </p>

    <div style="margin-top: 14px">
      <a class="btn secondary" href="/">Return to home</a>
    </div>
  </div>
</div>
