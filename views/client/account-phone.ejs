<!-- views/client/account-phone.ejs -->
<h2>Edit phone</h2>

<div id="phone-form-result" role="status" aria-live="polite"></div>

<form id="phoneForm" class="account-edit-form" novalidate>
  <div class="form-row">
    <label for="phone">Phone</label>
    <input id="phone" name="phone" type="text" value="<%= currentUser ? currentUser.phone : '' %>" required />
  </div>

  <div class="form-row">
    <button type="submit" class="btn-primary">Save phone</button>
    <a href="/client/dashboard" class="btn">Return to dashboard</a>
  </div>
</form>
